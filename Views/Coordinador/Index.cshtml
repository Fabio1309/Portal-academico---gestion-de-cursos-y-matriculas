@model IEnumerable<examen_parcial_programacion1.Models.Curso>
@{ ViewData["Title"] = "Panel de Gestión de Cursos"; }

<h1>@ViewData["Title"]</h1>

<p><a asp-action="Create" class="btn btn-primary">Crear Nuevo Curso</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Créditos</th>
            <th>Cupo Máx.</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@item.Codigo</td>
            <td>@item.Nombre</td>
            <td>@item.Creditos</td>
            <td>@item.CupoMaximo</td>
            <td>@(item.Activo ? "Sí" : "No")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Matriculas" asp-route-id="@item.Id" class="btn btn-sm btn-info">Matrículas</a>
                @if (item.Activo)
                {
                    <a asp-action="Deactivate" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Desactivar</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>