@model examen_parcial_programacion1.Models.Curso
@{ ViewData["Title"] = "Crear Curso"; }

<h1>Crear Nuevo Curso</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3"><label asp-for="Codigo" class="form-label"></label><input asp-for="Codigo" class="form-control" /></div>
            <div class="mb-3"><label asp-for="Nombre" class="form-label"></label><input asp-for="Nombre" class="form-control" /></div>
            <div class="mb-3"><label asp-for="Creditos" class="form-label"></label><input asp-for="Creditos" type="number" class="form-control" /></div>
            <div class="mb-3"><label asp-for="CupoMaximo" class="form-label"></label><input asp-for="CupoMaximo" type="number" class="form-control" /></div>
            <div class="mb-3"><label asp-for="HorarioInicio" class="form-label"></label><input asp-for="HorarioInicio" type="time" class="form-control" /></div>
            <div class="mb-3"><label asp-for="HorarioFin" class="form-label"></label><input asp-for="HorarioFin" type="time" class="form-control" /></div>
            <div class="form-check mb-3"><input class="form-check-input" asp-for="Activo" /><label class="form-check-label" asp-for="Activo"></label></div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>