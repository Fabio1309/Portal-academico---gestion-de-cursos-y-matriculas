@model examen_parcial_programacion1.Models.Curso

@{
    ViewData["Title"] = "Detalle del Curso";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h1>@Model!.Nombre</h1>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Código</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Codigo)</dd>
        
        <dt class="col-sm-2">Créditos</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Creditos)</dd>
        
        <dt class="col-sm-2">Cupo Máximo</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CupoMaximo)</dd>
        
        <dt class="col-sm-2">Horario</dt>
        <dd class="col-sm-10">@Model.HorarioInicio.ToString("HH:mm") - @Model.HorarioFin.ToString("HH:mm")</dd>
    </dl>
</div>

@if (User.Identity!.IsAuthenticated)
{
    <hr />
    <form asp-controller="Matriculas" asp-action="Inscribir" method="post">
        <input type="hidden" name="cursoId" value="@Model.Id" />
        <button type="submit" class="btn btn-success">Inscribirse en este curso</button>
    </form>
}

<div class="mt-3">
    <a asp-action="Index">Volver al Catálogo</a>
</div>