@model IEnumerable<examen_parcial_programacion1.Models.Curso>

@{
    ViewData["Title"] = "Catálogo de Cursos";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <label class="form-label">Buscar por Nombre</label>
            <input type="text" name="searchString" class="form-control" value="@ViewData["CurrentFilter"]" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Créditos Mín.</label>
            <input type="number" name="minCreditos" class="form-control" value="@ViewData["MinCreditos"]" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Créditos Máx.</label>
            <input type="number" name="maxCreditos" class="form-control" value="@ViewData["MaxCreditos"]" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Desde Horario</label>
            <input type="time" name="horario" class="form-control" value="@ViewData["Horario"]" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Creditos)</th>
            <th>Horario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Creditos)</td>
                <td>@item.HorarioInicio.ToString("HH:mm") - @item.HorarioFin.ToString("HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>